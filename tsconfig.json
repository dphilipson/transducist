{
    "compilerOptions": {
        "lib": ["es5", "es2015.iterable"],
        "module": "es2015",
        "moduleResolution": "node",
        "noEmit": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src/**/*", "__tests__/**/*"]
}
